---
// Hero Section Component
import TypingAnimation from '../TypingAnimation.tsx';
import AnimatedCounter from '../AnimatedCounter.tsx';
---

<section id="hero" class="min-h-screen flex items-center justify-center bg-black px-8 relative">
  <div class="max-w-4xl mx-auto text-center">
    <!-- Hero Content -->
    <div class="relative z-20">
      <h1 class="text-6xl md:text-7xl font-bold text-white mb-6 leading-tight">
        Hi, I'm <span class="text-green-400">Chinmayee!</span>
        <h1 class="text-6xl md:text-7xl font-bold text-white mb-6 leading-tight">
        This website is currently <span class="text-green-400">Under Construction.</span>
      </h1>
      
      <div class="text-xl md:text-2xl text-white opacity-80 mb-8 max-w-3xl mx-auto leading-relaxed h-16 flex items-center justify-center">
        <TypingAnimation 
          texts={[
            "A passionate CSE student and full-stack developer",
            "Turning ideas into reality through code",
            "Building scalable web applications",
            "Exploring AI and machine learning",
            "Creating seamless user experiences"
          ]}
          speed={50}
          deleteSpeed={30}
          pauseTime={2000}
          className="text-xl md:text-2xl"
          client:load
        />
      </div>

      <!-- Stats -->
      <div class="flex justify-center space-x-8 mb-8">
        <div class="text-center">
          <AnimatedCounter end={15} suffix="+" className="text-2xl font-bold text-green-400" client:load />
          <p class="text-sm text-white opacity-70">Projects</p>
        </div>
        <div class="text-center">
          <AnimatedCounter end={2} suffix="+" className="text-2xl font-bold text-green-400" client:load />
          <p class="text-sm text-white opacity-70">Years Experience</p>
        </div>
        <div class="text-center">
          <AnimatedCounter end={10} suffix="+" className="text-2xl font-bold text-green-400" client:load />
          <p class="text-sm text-white opacity-70">Technologies</p>
        </div>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-8">
        <a href="#projects" class="bg-green-400 hover:bg-green-500 text-black font-bold px-8 py-4 rounded-xl transition-all duration-200 text-lg hover:scale-105 shadow-lg z-30 relative">
          View My Work
        </a>
        <a href="#contact" class="border-2 border-green-400 text-green-400 hover:bg-green-400 hover:text-black font-bold px-8 py-4 rounded-xl transition-all duration-200 text-lg hover:scale-105 z-30 relative">
          Get In Touch
        </a>
      </div>
    </div>
  </div>
</section>

