---
// Projects Section Component
import ProjectCard from '../ProjectCard.tsx';
---

<section id="projects" class="py-16 p-8">
  <h2 class="text-4xl font-bold text-[#e6e6e6] mb-12 text-center">Selected Projects</h2>
  
  <!-- Project Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <ProjectCard
      title="Interface Kit"
      description="A comprehensive design system for modern web applications with reusable components and consistent styling. Built with TypeScript and React."
      technologies={["TypeScript", "React", "Storybook", "Tailwind CSS"]}
      image="/project1.jpg"
      liveUrl="https://interface-kit-demo.com"
      githubUrl="https://github.com/chinmayee/interface-kit"
      caseStudyUrl="#"
      client:load
    />
    
    <ProjectCard
      title="Insight Engine"
      description="AI-powered analytics platform that processes large datasets and provides actionable insights through intuitive dashboards. Features real-time data processing and machine learning models."
      technologies={["Python", "FastAPI", "React", "PostgreSQL", "Redis"]}
      image="/project2.jpg"
      liveUrl="https://insight-engine-demo.com"
      githubUrl="https://github.com/chinmayee/insight-engine"
      caseStudyUrl="#"
      client:load
    />
    
    <ProjectCard
      title="Core API"
      description="Scalable backend infrastructure with microservices architecture, real-time data processing, and robust security measures. Handles millions of requests daily."
      technologies={["Node.js", "Docker", "AWS", "MongoDB", "Redis"]}
      image="/project3.jpg"
      liveUrl="https://core-api-demo.com"
      githubUrl="https://github.com/chinmayee/core-api"
      caseStudyUrl="#"
      client:load
    />
    
    <ProjectCard
      title="Scout"
      description="Mobile-first application for discovering and sharing local experiences with real-time location services and social features. Available on iOS and Android."
      technologies={["React Native", "Node.js", "PostgreSQL", "WebSocket", "Mapbox"]}
      image="/project4.jpg"
      liveUrl="https://scout-app-demo.com"
      githubUrl="https://github.com/chinmayee/scout"
      caseStudyUrl="#"
      client:load
    />
  </div>
</section>

