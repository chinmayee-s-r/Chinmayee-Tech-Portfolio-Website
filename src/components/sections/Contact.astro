---
// Contact Section Component
---

<section id="contact" class="py-16 p-8 bg-black">
  <h2 class="text-4xl font-bold text-white mb-12 text-center">Contact</h2>
  <div class="max-w-2xl mx-auto w-full">
    <form class="space-y-8">
      <div>
        <input type="text" placeholder="Your name" class="w-full bg-gray-900 border border-gray-700 text-white px-6 py-4 rounded-lg focus:outline-none focus:border-green-400 text-lg">
      </div>
      <div>
        <input type="email" placeholder="Email address" class="w-full bg-gray-900 border border-gray-700 text-white px-6 py-4 rounded-lg focus:outline-none focus:border-green-400 text-lg">
      </div>
      <div>
        <textarea placeholder="Message" rows="8" class="w-full bg-gray-900 border border-gray-700 text-white px-6 py-4 rounded-lg focus:outline-none focus:border-green-400 resize-none text-lg"></textarea>
      </div>
      <div class="flex justify-center">
        <button type="submit" class="bg-gray-900 hover:bg-green-400 text-white hover:text-black py-4 px-8 rounded-lg transition-colors flex items-center space-x-3 border border-gray-700 hover:border-green-400 text-lg">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
          </svg>
          <span>Send Message</span>
        </button>
      </div>
    </form>
  </div>
</section>

