---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import Projects from '../components/sections/Projects.astro';
import About from '../components/sections/About.astro';
import Skills from '../components/sections/Skills.astro';
import Contact from '../components/sections/Contact.astro';
import ThemeToggle from '../components/ThemeToggle.tsx';
---

<Layout>
  <div class="flex min-h-screen">
    <!-- Left Sidebar (Static) - 25% width -->
    <aside class="w-[25%] bg-black text-white p-8 border-r border-black flex-shrink-0 h-screen overflow-y-auto">
      <!-- Name Section -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-white mb-4">Chinmayee Randive</h1>
        <p class="text-white text-sm leading-relaxed opacity-70">
          CSE Student | Full Stack Developer | AI Enthusiast
        </p>
      </div>

      <!-- Profile Picture -->
      <div class="mb-8">
        <div class="w-64 h-64 rounded-lg bg-gray-900 mx-auto flex items-center justify-center border border-gray-700">
          <svg class="w-32 h-32 text-green-400 opacity-60" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
          </svg>
        </div>
      </div>

      <!-- Social Media Icons -->
      <div class="flex justify-center space-x-6 mb-8">
        <!-- LinkedIn -->
        <a href="https://linkedin.com/in/chinmayee-randive" target="_blank" rel="noopener noreferrer" class="text-white opacity-60 hover:opacity-100 hover:text-green-400 transition-colors" title="LinkedIn Profile">
          <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <!-- GitHub -->
        <a href="https://github.com/chinmayee-randive" target="_blank" rel="noopener noreferrer" class="text-white opacity-60 hover:opacity-100 hover:text-green-400 transition-colors" title="GitHub Profile">
          <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
        <!-- Email -->
        <a href="mailto:chinmayee.randive@email.com" class="text-white opacity-60 hover:opacity-100 hover:text-green-400 transition-colors" title="Email Contact">
          <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-.904.732-1.636 1.636-1.636h3.819l6.545 4.91 6.545-4.91h3.819c.904 0 1.636.732 1.636 1.636z"/>
          </svg>
        </a>
      </div>

      <!-- Download Resume Button -->
      <button id="download-resume" class="w-full bg-gray-900 hover:bg-green-400 text-white hover:text-black py-4 px-6 rounded-lg transition-all duration-200 flex items-center justify-center space-x-3 border border-gray-700 hover:border-green-400 hover:shadow-lg group">
        <svg class="w-5 h-5 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <span class="font-medium">Download Resume</span>
      </button>
    </aside>

    <!-- Right Main Content Area (Scrollable) - 75% width -->
    <main class="w-[75%] bg-black text-white h-screen overflow-y-auto relative" id="main-content">
      <!-- Animated Background Elements -->
      <div class="fixed inset-0 overflow-hidden pointer-events-none">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-green-400 opacity-10 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-green-400 opacity-10 rounded-full blur-3xl"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-green-400 opacity-5 rounded-full blur-3xl"></div>
      </div>

      <!-- Content with relative positioning to appear above background -->
      <div class="relative z-10">
        <!-- Hero Section -->
        <Hero />

        <!-- Selected Projects Section -->
        <Projects />

        <!-- About Me Section -->
        <About />

      <!-- Skills Section -->
      <Skills />

        <!-- Contact Section -->
        <Contact />
      </div>
    </main>
  </div>

  <!-- Floating Navigation Box -->
  <div class="fixed top-6 left-1/2 transform -translate-x-1/2 z-50">
    <nav class="bg-gray-900 border border-gray-700 rounded-2xl px-6 py-3 flex items-center space-x-6 shadow-2xl backdrop-blur-md">
      <a href="#hero" class="flex items-center space-x-2 text-white opacity-70 hover:opacity-100 hover:text-green-400 transition-all duration-200 font-medium text-sm px-3 py-2 rounded-lg hover:bg-gray-800">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
        </svg>
        <span>Home</span>
      </a>
      <a href="#projects" class="flex items-center space-x-2 text-white opacity-70 hover:opacity-100 hover:text-green-400 transition-all duration-200 font-medium text-sm px-3 py-2 rounded-lg hover:bg-gray-800">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
        </svg>
        <span>Projects</span>
      </a>
      <a href="#about" class="flex items-center space-x-2 text-white opacity-70 hover:opacity-100 hover:text-green-400 transition-all duration-200 font-medium text-sm px-3 py-2 rounded-lg hover:bg-gray-800">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
        </svg>
        <span>About</span>
      </a>
      <a href="#skills" class="flex items-center space-x-2 text-white opacity-70 hover:opacity-100 hover:text-green-400 transition-all duration-200 font-medium text-sm px-3 py-2 rounded-lg hover:bg-gray-800">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <span>Skills</span>
      </a>
      <a href="#contact" class="flex items-center space-x-2 text-white opacity-70 hover:opacity-100 hover:text-green-400 transition-all duration-200 font-medium text-sm px-3 py-2 rounded-lg hover:bg-gray-800">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
        </svg>
        <span>Contact</span>
      </a>
      <!-- Theme Toggle -->
      <div class="ml-4 pl-4 border-l border-gray-700">
        <ThemeToggle client:load />
      </div>
    </nav>
  </div>

  <script>
    // Wait for DOM and React components to load
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Scroll fix script loaded');
      
      // Wait for React components to hydrate
      setTimeout(() => {
        const scrollContainer = document.getElementById('main-content');
        
        if (!scrollContainer) {
          console.error('Scroll container not found!');
          return;
        }

        console.log('Scroll container found:', scrollContainer);

        // Simple navigation without smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const targetId = this.getAttribute('href');
            const target = document.querySelector(targetId);
            
            if (target && scrollContainer) {
              // Simple instant scroll without animation
              const header = document.querySelector('header');
              const headerHeight = header ? header.offsetHeight : 80;
              const targetPosition = target.offsetTop - headerHeight;
              
              scrollContainer.scrollTop = Math.max(0, targetPosition);
            }
          });
        });

        // Simple scroll event listener for navigation highlighting
        scrollContainer.addEventListener('scroll', function() {
          updateActiveNavigation(scrollContainer);
        });

        // Initial navigation update
        updateActiveNavigation(scrollContainer);

      }, 1500); // Wait for React components to load
    });

    // scrollToSection function removed - using simple instant scroll instead

    function updateActiveNavigation(container) {
      const sections = document.querySelectorAll('section[id]');
      const navLinks = document.querySelectorAll('nav a[href^="#"]');
      
      if (!sections.length || !navLinks.length) return;
      
      const header = document.querySelector('header');
      const headerHeight = header ? header.offsetHeight : 80;
      
      let current = '';
      const scrollTop = container.scrollTop;
      
      sections.forEach(section => {
        const sectionTop = section.offsetTop - headerHeight - 50; // Add some buffer
        const sectionHeight = section.offsetHeight;
        
        if (scrollTop >= sectionTop && scrollTop < sectionTop + sectionHeight) {
          current = section.getAttribute('id');
        }
      });

      // Update navigation highlighting
      navLinks.forEach(link => {
        const href = link.getAttribute('href');
        const isActive = href === `#${current}`;
        
        link.classList.toggle('text-amber-500', isActive);
        link.classList.toggle('opacity-100', isActive);
        link.classList.toggle('opacity-70', !isActive);
      });
    }


    // Project filter functionality
    const filterButtons = document.querySelectorAll('#projects button');
    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        // Remove active class from all filter buttons
        filterButtons.forEach(btn => {
          btn.classList.remove('bg-[#1a1a1c]', 'text-white');
          btn.classList.add('text-[#e6e6e6]');
        });
        
        // Add active class to clicked button
        this.classList.add('bg-[#1a1a1c]', 'text-white');
        this.classList.remove('text-[#e6e6e6]');
        
        console.log('Filter clicked:', this.textContent);
      });
    });

    // Form submission
    const contactForm = document.querySelector('form');
    if (contactForm) {
      contactForm.addEventListener('submit', function(e) {
        e.preventDefault();
        console.log('Form submitted');
      });
    }

    // Download Resume functionality
    const downloadResumeBtn = document.getElementById('download-resume');
    if (downloadResumeBtn) {
      downloadResumeBtn.addEventListener('click', function() {
        // Create a temporary link to download resume
        const link = document.createElement('a');
        link.href = '/resume.pdf'; // Update this path to your actual resume file
        link.download = 'Chinmayee_Randive_Resume.pdf';
        link.target = '_blank';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
        
        // Optional: Show a toast notification
        console.log('Resume download initiated');
      });
    }
  </script>
</Layout>